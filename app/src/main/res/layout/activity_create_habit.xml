<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Заголовок экрана -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Новая привычка"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Поле для ввода названия привычки -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Название">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etHabitTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Поле для ввода описания привычки -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Описание"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etHabitDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilHabitType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Тип"
            android:layout_marginTop="8dp">

            <!-- RadioGroup для выбора типа привычки -->
            <RadioGroup
                android:id="@+id/rgHabitType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Радиокнопки для выбора типа -->
                <RadioButton
                    android:id="@+id/rbHabitType1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Тип 1" />

                <RadioButton
                    android:id="@+id/rbHabitType2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Тип 2" />

                <RadioButton
                    android:id="@+id/rbHabitType3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Тип 3" />
            </RadioGroup>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Поле для ввода частоты выполнения привычки с единицей измерения -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilHabitFrequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Частота"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Поле для ввода числа (количество раз) -->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etHabitFrequency"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:hint="Число" />

                <!-- Spinner для выбора единицы измерения (например, "раз в день" или "раз в неделю") -->
                <Spinner
                    android:id="@+id/spinnerFrequencyUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Выбор приоритета привычки -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Приоритет"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:entries="@array/priority_levels" />

        <!-- Выбор цвета привычки -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Цвет"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:entries="@array/color_options" />

        <!-- Кнопка для сохранения привычки -->
        <Button
            android:id="@+id/btnSaveHabit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>