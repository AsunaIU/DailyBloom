<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityHabitTracker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<!--        &lt;!&ndash; Вставка календаря &ndash;&gt;-->
<!--        <include layout="@layout/activity_week_view"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Add a habit"
            android:textSize="25dp"
            android:gravity="center"/>

        <!-- Список привычек -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSchedule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="16dp" />

        </LinearLayout>

    <!-- Кнопка FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@drawable/ic_plus"
        app:backgroundTint="#71DEDB"
        android:contentDescription="@string/add_habit_description"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>